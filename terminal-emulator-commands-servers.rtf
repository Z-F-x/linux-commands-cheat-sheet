# Create archive file of folder:

tar -czf ~/Path/to/place/archive/file/archived-file.tar.gz /path/to/folder/you/want/to/archive


# Download specific file on server with scp:
scp root@your_server_ip:/path/on/server/fileName.tar.gz ~/path/in/your/local/computer

# Do a mysql dump of your database
mysqldump -u your_db_user -p your_database_name > database-backup.sql
